{# see https://stackoverflow.com/a/1250279 #}
{%- set escape_single_quote = "'\"'\"'" -%}
BORG_PASSPHRASE='{{ passphrase | replace("'", escape_single_quote) }}'
BORG_REPO='{{ repository }}'
BORG_RELOCATED_REPO_ACCESS_IS_OK='yes'
BORG_RSH='ssh -i /root/.ssh/id_{{ app }}_ed25519 -oStrictHostKeyChecking=yes '
{%- if remote_path %}
BORG_REMOTE_PATH='{{ remote_path }}'
{%- endif %}
